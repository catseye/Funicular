.k ""
echo "** Workbenchizing your Funicular virtual disk!"

assign Gondola: Funicular:

echo "(1/12) Copying C:..."
copy C: to Gondola:c all quiet

echo "(2/12) Copying S:..."
copy S: to Gondola:s all quiet

echo "(3/12) Copying L:..."
copy L: to Gondola:l all quiet

echo "(4/12) Copying DEVS:..."
copy DEVS: to Gondola:devs all quiet

echo "(5/12) Copying LIBS:..."
copy LIBS: to Gondola:libs all quiet

echo "(6/12) Copying FONTS:..."
copy FONTS: to Gondola:fonts all quiet

echo "(7/12) Copying Utilities..."
copy SYS:Utilities to Gondola:Utilities all quiet
copy SYS:Utilities.info to Gondola:Utilities.info quiet

echo "(8/12) Copying System..."
copy SYS:System to Gondola:System all quiet
copy SYS:System.info to Gondola:System.info quiet

echo "(9/12) Copying Expansion..."
copy SYS:Expansion to Gondola:Expansion all quiet
copy SYS:Expansion.info to Gondola:Expansion.info quiet

echo "(10/12) Copying Trashcan..."
copy SYS:Trashcan to Gondola:Trashcan all quiet
copy SYS:Trashcan.info to Gondola:Trashcan.info quiet

echo "(11/12) Copying Shell..."
copy SYS:Shell to Gondola:Shell all quiet
copy SYS:Shell.info to Gondola:Shell.info quiet

echo "(12/12) Copying Prefs..."
copy SYS:Prefs to Gondola:Prefs all quiet
copy SYS:Prefs.info to Gondola:Prefs.info quiet

echo "Replacing startup-sequence..."
copy Gondola:s/Startup-Sequence Gondola:s/Startup-Sequence.backup
copy Gondola:s/Startup-Sequence.Gondola Gondola:s/Startup-Sequence

;echo "Making your icons float..."
;protect Gondola:c/NoIconPos rwed
;Gondola:c/NoIconPos Gondola:AmigaBasic
;Gondola:c/NoIconPos Gondola:Trashcan
;Gondola:c/NoIconPos Gondola:Extras/BasicDemos
;Gondola:c/NoIconPos Gondola:Extras/Tools
;Gondola:c/NoIconPos Gondola:Extras/FD1.3

echo "Done.  You should now:"
echo "** EJECT the Workbench and Extras disks, and"
echo "** REBOOT your Amiga and see that it boots from Funicular"
